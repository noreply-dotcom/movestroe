<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ page_title }}{% if page_title != shop.name %} | {{ shop.name }}{% endif %}</title>
  <meta name="description" content="{{ page_description | escape }}">

  {{ content_for_header }}

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">

  <link rel="canonical" href="{{ canonical_url }}">

  {% if settings.favicon != blank %}
    <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
  {% endif %}

  {{ 'movetogether-store.css' | asset_url | stylesheet_tag }}
</head>

<body>
  <a class="skip-to-content-link button" href="#MainContent">
    {{ "accessibility.skip_to_text" | t }}
  </a>

  <!-- Announcement Bar -->
  <div class="announcement-bar">
    <div class="announcement-bar-inner">
      <a href="/collections/all" class="announcement-bar-link">
        {{ "homepage.announcement_text" | t | default: "FREE SHIPPING ON ORDERS OVER $75. SHOP NOW" }}
      </a>
    </div>
  </div>

  {% section 'header' %}

  <main id="MainContent" class="content-for-layout">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  {{ 'movetogether-store.js' | asset_url | script_tag }}
</body>
</html>
