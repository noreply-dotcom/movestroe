<header class="site-header">
  <div class="header-container">
    <div class="header-logo">
      {% if shop.brand.logo %}
        <a href="/">
          <img src="{{ shop.brand.logo | img_url: '100x' }}" alt="{{ shop.name }}" width="100">
        </a>
      {% else %}
        <a href="/" class="header-logo-text">{{ shop.name }}</a>
      {% endif %}
    </div>

    <nav class="header-nav">
      {% if linklists[settings.menu_main] != blank %}
        <ul class="nav-list">
          {% for link in linklists[settings.menu_main].links %}
            <li>
              {% if link.links != blank %}
                <a href="{{ link.url }}" class="nav-link has-submenu">{{ link.title }}</a>
                <ul class="submenu">
                  {% for childlink in link.links %}
                    <li><a href="{{ childlink.url }}" class="nav-link">{{ childlink.title }}</a></li>
                  {% endfor %}
                </ul>
              {% else %}
                <a href="{{ link.url }}" class="nav-link">{{ link.title }}</a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>

    <div class="header-actions">
      {% if settings.show_search %}
        <button class="search-toggle" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2"/>
            <line x1="14" y1="14" x2="18" y2="18" stroke="currentColor" stroke-width="2"/>
          </svg>
        </button>
      {% endif %}

      <a href="/account" class="header-account" aria-label="Account">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="10" cy="6" r="3" stroke="currentColor" stroke-width="1.5"/>
          <path d="M3 17C3 13.134 6.134 10 10 10C13.866 10 17 13.134 17 17" stroke="currentColor" stroke-width="1.5"/>
        </svg>
      </a>

      <a href="/cart" class="header-cart" aria-label="Cart">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 1H4L6.68 14.39C6.77 14.8839 7.02621 15.3228 7.38179 15.6494C7.73738 15.976 8.18558 16.1784 8.65 16.22H17.55C18.0143 16.1781 18.4622 15.9757 18.8178 15.6494C19.1734 15.323 19.4297 14.884 19.52 14.39L20 6H5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="7.5" cy="18" r="1.5" fill="currentColor"/>
          <circle cx="16.5" cy="18" r="1.5" fill="currentColor"/>
        </svg>
        {% if cart.item_count > 0 %}
          <span class="cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>

      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<style>
  .site-header {
    background: white;
    border-bottom: 1px solid #e0e0e0;
    position: sticky;
    top: 0;
    z-index: 50;
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
  }

  .header-logo a {
    text-decoration: none;
    color: #1a1a1a;
    display: flex;
    align-items: center;
  }

  .header-logo img {
    height: auto;
  }

  .header-logo-text {
    font-size: 20px;
    font-weight: 600;
  }

  .header-nav {
    flex: 1;
    margin: 0 40px;
  }

  .nav-list {
    display: flex;
    list-style: none;
    gap: 30px;
  }

  .nav-link {
    text-decoration: none;
    color: #1a1a1a;
    font-size: 14px;
    font-weight: 500;
    transition: color 0.3s;
  }

  .nav-link:hover {
    color: #369FFF;
  }

  .submenu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    min-width: 200px;
    list-style: none;
    padding: 10px 0;
  }

  .nav-link.has-submenu:hover + .submenu {
    display: block;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .search-toggle,
  .header-account,
  .mobile-menu-toggle {
    background: none;
    border: none;
    cursor: pointer;
    color: #1a1a1a;
    display: flex;
    align-items: center;
  }

  .header-cart {
    position: relative;
    color: #1a1a1a;
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #369FFF;
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: 600;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 2px;
    background: #1a1a1a;
    transition: all 0.3s;
  }

  @media (max-width: 768px) {
    .header-nav {
      display: none;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .header-container {
      padding: 0 15px;
      height: 60px;
    }
  }
</style>
