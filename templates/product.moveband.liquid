<script>
(function() {
  var prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  // ========== UTILITIES ==========
  function clamp(v, min, max) { return Math.min(Math.max(v, min), max); }
  function lerp(a, b, t) { return a + (b - a) * t; }
  function easeOutCubic(t) { return 1 - Math.pow(1 - t, 3); }

  // Get how far element is through viewport: 0 = entering bottom, 1 = leaving top
  function scrollProgress(el, start, end) {
    var rect = el.getBoundingClientRect();
    var vh = window.innerHeight;
    var s = vh * (start !== undefined ? start : 1);
    var e = vh * (end !== undefined ? end : 0);
    return clamp((s - rect.top) / (s - e), 0, 1);
  }

  // ========== 1. TRIGGER-BASED REVEALS (IntersectionObserver) ==========
  var reveals = document.querySelectorAll('.mb-reveal');
  if ('IntersectionObserver' in window) {
    var revealObs = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          var el = entry.target;
          var delay = parseInt(el.getAttribute('data-delay') || '0', 10);
          setTimeout(function() { el.classList.add('visible'); }, delay);
          revealObs.unobserve(el);
        }
      });
    }, { threshold: 0.12, rootMargin: '0px 0px -30px 0px' });
    reveals.forEach(function(el) { revealObs.observe(el); });
  } else {
    reveals.forEach(function(el) { el.classList.add('visible'); });
  }

  // ========== 2. ANIMATED COUNTERS ==========
  var counters = document.querySelectorAll('[data-count]');
  if ('IntersectionObserver' in window) {
    var counterObs = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          var el = entry.target;
          var target = parseInt(el.getAttribute('data-count'), 10);
          var duration = 1800;
          var startTime = null;
          function step(ts) {
            if (!startTime) startTime = ts;
            var p = Math.min((ts - startTime) / duration, 1);
            el.textContent = Math.floor(easeOutCubic(p) * target);
            if (p < 1) requestAnimationFrame(step);
            else el.textContent = target;
          }
          requestAnimationFrame(step);
          counterObs.unobserve(el);
        }
      });
    }, { threshold: 0.5 });
    counters.forEach(function(el) { counterObs.observe(el); });
  }

  // ========== 3. SCROLL-DRIVEN ANIMATIONS ==========
  if (prefersReduced) {
    // Show everything immediately
    document.querySelectorAll('.mb-word').forEach(function(w) { w.classList.add('revealed'); });
    var bh = document.querySelector('.mb-battery-hero');
    if (bh) { bh.style.transform = 'none'; bh.style.opacity = '1'; }
    var fm = document.querySelector('.mb-full-media .mb-media-slot');
    if (fm) { fm.style.transform = 'none'; }
  } else {

    // Cache DOM references
    var heroSection = document.querySelector('.mb-hero');
    var heroProduct = document.querySelector('.mb-hero-product');
    var heroContent = document.querySelector('.mb-hero-content');
    var heroGlow = document.querySelector('.mb-hero-glow');
    var heroIndicator = document.querySelector('.mb-scroll-indicator');

    var statementSection = document.querySelector('.mb-statement');
    var statementWords = document.querySelectorAll('.mb-word');

    var zoomMedia = document.querySelector('[data-scroll="zoom"]');
    var zoomSlot = zoomMedia ? zoomMedia.querySelector('.mb-media-slot') : null;

    var batterySection = document.querySelector('[data-scroll="battery"]');
    var batteryHero = batterySection ? batterySection.querySelector('.mb-battery-hero') : null;

    var parallaxMedias = document.querySelectorAll('[data-scroll="parallax"]');

    var videoSection = document.querySelector('[data-scroll="video"]');
    var videoWrap = videoSection ? videoSection.querySelector('.mb-video-wrap') : null;

    var progressBar = document.querySelector('.mb-progress');

    var stickyBar = document.getElementById('mb-sticky-bar');
    var buySection = document.getElementById('mb-buy');

    var scrollTicking = false;

    function updateScroll() {
      var scrollY = window.scrollY;
      var vh = window.innerHeight;
      var docH = document.documentElement.scrollHeight - vh;

      // --- Progress bar ---
      if (progressBar) {
        progressBar.style.transform = 'scaleX(' + (scrollY / docH) + ')';
      }

      // --- Hero parallax ---
      if (heroSection && scrollY < vh * 1.5) {
        var hp = clamp(scrollY / vh, 0, 1);
        var productY = hp * -100;
        var productScale = 1 + hp * 0.15;
        var contentY = hp * 80;
        var contentOp = clamp(1 - hp * 2, 0, 1);
        var glowScale = 1 + hp * 0.5;

        heroProduct.style.transform = 'translateY(' + productY + 'px) scale(' + productScale + ')';
        heroContent.style.transform = 'translateY(' + contentY + 'px)';
        heroContent.style.opacity = contentOp;
        heroGlow.style.transform = 'translate(-50%, -60%) scale(' + glowScale + ')';
        if (heroIndicator) heroIndicator.style.opacity = clamp(1 - hp * 4, 0, 1);
      }

      // --- Statement word-by-word reveal ---
      if (statementSection && statementWords.length > 0) {
        var stRect = statementSection.getBoundingClientRect();
        var stHeight = statementSection.offsetHeight;
        var stScrolled = -stRect.top;
        var stProgress = clamp(stScrolled / (stHeight - vh), 0, 1);

        var wordCount = statementWords.length;
        for (var i = 0; i < wordCount; i++) {
          var wordThreshold = (i + 0.5) / wordCount;
          if (stProgress >= wordThreshold) {
            statementWords[i].classList.add('revealed');
          } else {
            statementWords[i].classList.remove('revealed');
          }
        }
      }

      // --- Display image zoom ---
      if (zoomSlot) {
        var zp = scrollProgress(zoomMedia, 1.1, 0.2);
        var zoomScale = lerp(1.15, 1.0, easeOutCubic(zp));
        zoomSlot.style.transform = 'scale(' + zoomScale + ')';
      }

      // --- Battery number scale ---
      if (batteryHero && batterySection) {
        var bp = scrollProgress(batterySection, 1.0, 0.35);
        var bScale = lerp(0.3, 1.0, easeOutCubic(bp));
        var bOpacity = lerp(0, 1, easeOutCubic(clamp(bp * 1.5, 0, 1)));
        batteryHero.style.transform = 'scale(' + bScale + ')';
        batteryHero.style.opacity = bOpacity;
      }

      // --- Split media parallax ---
      parallaxMedias.forEach(function(media) {
        var mp = scrollProgress(media, 1.3, -0.3);
        var mY = lerp(50, -50, mp);
        var mOp = clamp(mp * 3, 0, 1) * clamp((1 - mp) * 3, 0, 1);
        mOp = clamp(mOp + 0.15, 0, 1);
        media.style.transform = 'translateY(' + mY + 'px)';
        media.style.opacity = mOp;
      });

      // --- Video background parallax ---
      if (videoWrap && videoSection) {
        var vp = scrollProgress(videoSection, 1.2, -0.2);
        var vY = lerp(40, -40, vp);
        videoWrap.style.transform = 'translateY(' + vY + 'px)';
      }

      // --- Sticky buy bar ---
      if (stickyBar) {
        var showAfter = vh * 0.9;
        var buyTop = buySection ? buySection.getBoundingClientRect().top + scrollY - vh : Infinity;
        if (scrollY > showAfter && scrollY < buyTop) {
          stickyBar.classList.add('visible');
        } else {
          stickyBar.classList.remove('visible');
        }
      }

      scrollTicking = false;
    }

    window.addEventListener('scroll', function() {
      if (!scrollTicking) {
        requestAnimationFrame(updateScroll);
        scrollTicking = true;
      }
    }, { passive: true });

    // Run once on load
    updateScroll();
  }

  // ========== 4. VARIANT SELECTOR ==========
  var variantInputs = document.querySelectorAll('.mb-variant-option input');
  var hiddenVariantId = document.getElementById('mb-variant-id');
  if (variantInputs.length > 0 && hiddenVariantId) {
    variantInputs.forEach(function(input) {
      input.addEventListener('change', function() {
        hiddenVariantId.value = this.value;
      });
    });
  }

  // ========== 5. SMOOTH SCROLL ==========
  document.querySelectorAll('.mb-page a[href^="#"]').forEach(function(link) {
    link.addEventListener('click', function(e) {
      var target = document.querySelector(this.getAttribute('href'));
      if (target) {
        e.preventDefault();
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });
})();
