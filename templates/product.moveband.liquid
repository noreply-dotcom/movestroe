<script>
(function() {
  // Scroll reveal with IntersectionObserver
  var reveals = document.querySelectorAll('.mb-reveal');
  if ('IntersectionObserver' in window) {
    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          var el = entry.target;
          var delay = parseInt(el.getAttribute('data-delay') || '0', 10);
          setTimeout(function() { el.classList.add('visible'); }, delay);
          observer.unobserve(el);
        }
      });
    }, { threshold: 0.15, rootMargin: '0px 0px -40px 0px' });
    reveals.forEach(function(el) { observer.observe(el); });
  } else {
    reveals.forEach(function(el) { el.classList.add('visible'); });
  }

  // Animated counters
  var counters = document.querySelectorAll('[data-count]');
  if ('IntersectionObserver' in window) {
    var counterObserver = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          var el = entry.target;
          var target = parseInt(el.getAttribute('data-count'), 10);
          var duration = 1500;
          var start = 0;
          var startTime = null;
          function step(timestamp) {
            if (!startTime) startTime = timestamp;
            var progress = Math.min((timestamp - startTime) / duration, 1);
            var eased = 1 - Math.pow(1 - progress, 3);
            el.textContent = Math.floor(eased * target);
            if (progress < 1) {
              requestAnimationFrame(step);
            } else {
              el.textContent = target;
            }
          }
          requestAnimationFrame(step);
          counterObserver.unobserve(el);
        }
      });
    }, { threshold: 0.5 });
    counters.forEach(function(el) { counterObserver.observe(el); });
  }

  // Sticky buy bar — show after scrolling past hero
  var stickyBar = document.getElementById('mb-sticky-bar');
  var buySection = document.getElementById('mb-buy');
  if (stickyBar) {
    var lastScroll = 0;
    var ticking = false;
    window.addEventListener('scroll', function() {
      lastScroll = window.scrollY;
      if (!ticking) {
        requestAnimationFrame(function() {
          var showAfter = window.innerHeight * 0.8;
          var buyTop = buySection ? buySection.getBoundingClientRect().top + window.scrollY - window.innerHeight : Infinity;
          if (lastScroll > showAfter && lastScroll < buyTop) {
            stickyBar.classList.add('visible');
          } else {
            stickyBar.classList.remove('visible');
          }
          ticking = false;
        });
        ticking = true;
      }
    });
  }

  // Variant selector for buy section
  var variantInputs = document.querySelectorAll('.mb-variant-option input');
  var hiddenVariantId = document.getElementById('mb-variant-id');
  if (variantInputs.length > 0 && hiddenVariantId) {
    variantInputs.forEach(function(input) {
      input.addEventListener('change', function() {
        hiddenVariantId.value = this.value;
      });
    });
  }

  // Smooth scroll for anchor links within page
  document.querySelectorAll('.mb-page a[href^="#"]').forEach(function(link) {
    link.addEventListener('click', function(e) {
      var target = document.querySelector(this.getAttribute('href'));
      if (target) {
        e.preventDefault();
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });
})();
</script>
